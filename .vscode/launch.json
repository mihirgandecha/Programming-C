{
    "configurations": [
        {
            "name": "Debug parse_s with GDB",   
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Turtle/parse_s",
            "args": ["Turtle/TTLs/forward.ttl"], // Adjust for different TTL files
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": { 
                "trace": true, 
                "traceResponse": true, 
                "engineLogging": true 
            }
        },
        {
