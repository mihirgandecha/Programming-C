{
    "configurations": [
        {
            "name": "(gdb) Turtle",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Turtle/parse_s", // Ensure this path is correct
            "args": ["parse_s TTLs/forward.ttl"], // Add any required arguments
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
            // Removed "preLaunchTask"
        }
    ]
}
